{
  "name": "wgptdb",
  "version": "0.0.4",
  "main": "main.js",
  "scripts": {
    "rebuild": "electron-rebuild",
    "ng": "ng",
    "start": "electron .",
    "build": "electron-builder",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron-build": "ng build --configuration=production && electron .",
    "dist": "ng build --configuration=production && electron-builder -p always",
    "pack": "electron-packager . wgptdb --platform=darwin --arch=x64 --out=dist --overwrite",
    "dmg": "electron-installer-dmg dist/wgptdb-darwin-x64/wgptdb.app wgptdb",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "wg-pt-db",
    "productName": "WG PT DB",
    "icon": "src/assets/icon.ico",
    "asar": false,
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "category": "public.app-category.utilities"
  },
  "win": {
    "target": "nsis"
  }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/cdk": "^16.2.12",
    "@angular/common": "^16.1.0",
    "@angular/compiler": "^16.1.0",
    "@angular/core": "^16.1.0",
    "@angular/forms": "^16.1.0",
    "@angular/material": "^16.2.12",
    "@angular/platform-browser": "^16.1.0",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular/router": "^16.1.0",
    "dotenv": "^16.4.2",
    "electron-updater": "^6.1.7",
    "file-saver": "^2.0.5",
    "mssql": "^10.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.5",
    "@angular/cli": "~16.1.5",
    "@angular/compiler-cli": "^16.1.0",
    "@types/jasmine": "~4.3.0",
    "electron": "^28.1.2",
    "electron-builder": "^24.9.1",
    "electron-installer-dmg": "^5.0.1",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.1.3"
  }
}
